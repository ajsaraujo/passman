<?xml version="1.0" encoding="UTF-8"?>

<?import com.passman.ui.components.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.passman.ui.views.SignUp">
   <children>
      <Label style="-fx-font-size: 30px; -fx-font-weight: bold;" text="Create new Passman file">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </Label>
      <FormField fx:id="nameField" labelText="Your name:" prefHeight="87.0" prefWidth="375.0" required="true" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </FormField>
      <FormField fx:id="passwordField" labelText="Password:" obscureText="true" required="true" />
      <FormField fx:id="confirmPasswordField" labelText="Confirm Password:" obscureText="true" required="true">
         <padding>
            <Insets bottom="25.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="-15.0" />
         </VBox.margin>
      </FormField>
      <Label text="File location:">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="-10.0" />
         </VBox.margin>
      </Label>
      <HBox prefWidth="375.0" spacing="15.0">
         <children>
            <Button fx:id="searchFileButton" mnemonicParsing="false" onAction="#searchFileButtonClicked" prefHeight="45.0" prefWidth="50.0">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="79.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/folder.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <TextField fx:id="fileLocationField" prefHeight="45.0" prefWidth="312.0" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets bottom="-10.0" />
         </VBox.margin>
      </HBox>
      <Label fx:id="locationErrorLabel" styleClass="error-label" text="Pick a location by clicking on the button above.">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <HBox alignment="TOP_RIGHT" spacing="15.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonClicked" prefHeight="42.0" prefWidth="118.0" styleClass="secondary-button" text="Cancel" />
            <Button fx:id="confirmButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#confirmButtonClicked" prefHeight="42.0" prefWidth="129.0" text="Confirm" />
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="40.0" left="50.0" right="60.0" top="35.0" />
   </padding>
</VBox>
