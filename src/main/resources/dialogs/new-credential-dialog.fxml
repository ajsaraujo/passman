<?xml version="1.0" encoding="UTF-8"?>

<?import com.passman.ui.components.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root spacing="20.0" type="VBox" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="New Credential">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
       <FormField fx:id="serviceField" labelText="Service:" required="true" />
       <FormField fx:id="usernameField" labelText="Username:" required="true" />
       <FormField fx:id="passwordField" iconName="copy" labelText="Password:" obscureText="true" required="true">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></FormField>
       <ConfirmOrCancel actionName="CREATE" />
   </children>
   <padding>
      <Insets bottom="35.0" left="50.0" right="50.0" top="35.0" />
   </padding>
</fx:root>
