<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root spacing="20.0" type="VBox" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="File location:">
        <font>
            <Font size="20.0" />
        </font>
        <VBox.margin>
            <Insets bottom="-10.0" />
        </VBox.margin>
    </Label>
    <HBox prefWidth="375.0" spacing="15.0">
        <children>
            <Button fx:id="button" mnemonicParsing="false" onAction="#searchFileButtonClicked" prefHeight="45.0" prefWidth="50.0">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="79.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../assets/folder.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <TextField fx:id="textField" prefHeight="45.0" prefWidth="312.0" HBox.hgrow="ALWAYS" />
        </children>
        <VBox.margin>
            <Insets bottom="-10.0" />
        </VBox.margin>
    </HBox>
    <Label fx:id="errorLabel" styleClass="error-label" text="Pick a location by clicking on the button above.">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
</fx:root>
